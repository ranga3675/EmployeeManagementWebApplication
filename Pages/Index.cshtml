@page
@model MongoDbWebApplication.Pages.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="./MongoDbData/Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MongoDb[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MongoDb[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MongoDb[0].PersonalPhone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MongoDb[0].WorkPhone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MongoDb[0].PersonalEmail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MongoDb[0].WorkEmail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MongoDb[0].HoursPerWeek)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MongoDb[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MongoDb[0].Department)
            </th>            
            <th>
                @Html.DisplayNameFor(model => model.MongoDb[0].CreatedAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MongoDb[0].UpdatedAt)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.MongoDb)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PersonalPhone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.WorkPhone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PersonalEmail)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.WorkEmail)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HoursPerWeek)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Department)
                </td>               
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedAt)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UpdatedAt)
                </td>
                <td>
                    <a asp-page="./MongoDbData/Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-page="./MongoDbData/Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-page="./MongoDbData/Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
